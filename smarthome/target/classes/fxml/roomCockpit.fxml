<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="at.jku.se.smarthome.controllers.RoomController"
            style="-fx-background-color:#f2f2f2;"
            prefWidth="820" prefHeight="640">

    <!-- Zurück zur Startseite oben links -->
    <top>
        <HBox alignment="CENTER_LEFT">
            <padding>
                <Insets top="15" right="20" bottom="10" left="25"/>
            </padding>
            <children>
                <Button text="←  Zurück zur Startseite"
                        style="-fx-background-color:transparent; -fx-text-fill:#333333;"
                        onAction="#backToDashboard"/>
            </children>
        </HBox>
    </top>

    <center>
        <StackPane alignment="TOP_CENTER">
            <padding>
                <Insets top="10" right="0" bottom="20" left="0"/>
            </padding>
            <children>

                <!-- ========== FORMULAR-CARD: Raum hinzufügen / bearbeiten ========== -->
                <VBox fx:id="formCard"
                      alignment="TOP_CENTER" spacing="20"
                      maxWidth="520"
                      style="-fx-background-color:#e0e0e0; -fx-background-radius:20;">
                    <padding>
                        <Insets top="24" right="40" bottom="32" left="40"/>
                    </padding>
                    <children>

                        <!-- Überschrift -->
                        <VBox spacing="4" alignment="CENTER_LEFT">
                            <children>
                                <Label fx:id="titleLabel"
                                       text="Raum hinzufügen"
                                       style="-fx-font-size:18; -fx-font-weight:bold;"/>
                                <Label fx:id="subtitleLabel"
                                       text="Fügen Sie Ihrem Haus oder Wohnung einen Raum hinzu"
                                       style="-fx-font-size:11; -fx-text-fill:#666666;"/>
                            </children>
                        </VBox>

                        <!-- Formular -->
                        <VBox spacing="12" maxWidth="Infinity">

                            <!-- Name -->
                            <VBox spacing="4">
                                <children>
                                    <Label text="Name*" style="-fx-font-size:11; -fx-text-fill:#333333;"/>
                                    <TextField fx:id="nameField"
                                               promptText="Lieblingszimmer"/>
                                </children>
                            </VBox>

                            <!-- Größe -->
                            <VBox spacing="4">
                                <children>
                                    <Label text="Größe (in Quadratmeter)" style="-fx-font-size:11; -fx-text-fill:#333333;"/>
                                    <TextField fx:id="sizeField"
                                               promptText="30"/>
                                </children>
                            </VBox>

                            <!-- Raumtyp -->
                            <VBox spacing="4">
                                <children>
                                    <Label text="Raumtyp" style="-fx-font-size:11; -fx-text-fill:#333333;"/>
                                    <ComboBox fx:id="roomComboBox"
                                              promptText="Wohnzimmer"/>
                                </children>
                            </VBox>

                            <!-- Position im Gebäude -->
                            <VBox spacing="4">
                                <children>
                                    <Label text="Position im Gebäude" style="-fx-font-size:11; -fx-text-fill:#333333;"/>
                                    <ComboBox fx:id="roomLocationCombo"
                                              promptText="Rechts hinten"/>
                                </children>
                            </VBox>

                        </VBox>

                        <!-- Buttons -->
                        <HBox spacing="10" alignment="CENTER">
                            <padding>
                                <Insets top="18" right="0" bottom="0" left="0"/>
                            </padding>
                            <children>
                                <Button text="Speichern"
                                        onAction="#saveRoom"
                                        style="-fx-background-color:#333333; -fx-text-fill:white; -fx-padding:4 20 4 20;"/>
                                <Button text="Abbrechen"
                                        onAction="#cancel"
                                        style="-fx-background-color:white; -fx-text-fill:#333333;
                                               -fx-border-color:#cccccc; -fx-border-radius:4;
                                               -fx-padding:4 20 4 20;"/>
                            </children>
                        </HBox>

                    </children>
                </VBox>

                <!-- ========== LISTEN-CARD: Liste der Räume ========== -->
                <VBox fx:id="listCard"
                      alignment="TOP_CENTER"
                      maxWidth="520"
                      style="-fx-background-color:#e0e0e0; -fx-background-radius:20;">
                    <padding>
                        <Insets top="24" right="40" bottom="24" left="40"/>
                    </padding>

                    <children>

                        <!-- Überschrift -->
                        <VBox spacing="4">
                            <children>
                                <Label text="Liste der angelegten"
                                       style="-fx-font-size:18; -fx-font-weight:bold;"/>
                                <Label text="Räume"
                                       style="-fx-font-size:18; -fx-font-weight:bold;"/>
                                <Label text="Eine Liste mit allen angelegten Räumen"
                                       style="-fx-font-size:11; -fx-text-fill:#555555;"/>
                            </children>
                        </VBox>

                        <!-- Container für die Zeilen (wird im Controller befüllt) -->
                        <VBox fx:id="roomsContainer" spacing="10">
                            <!-- Beispiel-Zeile -->
                            <HBox spacing="8"
                                  style="-fx-background-color:#f9f9f9; -fx-background-radius:20;
                                         -fx-border-color:#cccccc; -fx-border-radius:20;">
                                <padding>
                                    <Insets top="6" bottom="6" left="16" right="6"/>
                                </padding>

                                <!-- Raumname -->
                                <Label text="Wohnen"
                                       HBox.hgrow="ALWAYS"
                                       style="-fx-font-size:12;"/>

                                <!-- Buttons -->
                                <Button text="Bearbeiten"
                                        onAction="#editRoom"
                                        style="-fx-background-color:#333333; -fx-text-fill:white;
                                               -fx-font-size:11; -fx-padding:4 14 4 14;"/>

                                <Button text="Löschen"
                                        onAction="#deleteRoom"
                                        style="-fx-background-color:white; -fx-text-fill:#333333;
                                               -fx-border-color:#333333; -fx-border-radius:16;
                                               -fx-font-size:11; -fx-padding:4 14 4 14;"/>
                            </HBox>
                        </VBox>

                    </children>
                </VBox>
                <!-- ========== POPUP: Lösch-Bestätigung ========== -->
                <VBox fx:id="deletePopup"
                      alignment="CENTER"
                      visible="false" managed="false"
                      style="-fx-background-color: rgba(0,0,0,0.25);">
                    <children>
                        <VBox spacing="15" alignment="CENTER"
                              style="-fx-background-color:#e0e0e0; -fx-background-radius:20;"
                              maxWidth="420" maxHeight="240">
                            <padding>
                                <Insets top="30" right="40" bottom="30" left="40"/>
                            </padding>
                            <children>
                                <Label text="Wollen Sie den Raum"
                                       style="-fx-font-size:18;"/>
                                <Label text="wirklich löschen?"
                                       style="-fx-font-size:18;"/>
                                <!-- optional Raumname -->
                                <Label fx:id="deleteRoomNameLabel"
                                       text=""
                                       style="-fx-font-size:12; -fx-text-fill:#555555;"/>

                                <HBox spacing="12" alignment="CENTER">
                                    <Button text="JA"
                                            onAction="#confirmDelete"
                                            style="-fx-background-color:#333333; -fx-text-fill:white;
                                               -fx-padding:4 18 4 18;"/>
                                    <Button text="NEIN"
                                            onAction="#cancelDelete"
                                            style="-fx-background-color:white; -fx-text-fill:#333333;
                                               -fx-border-color:#cccccc; -fx-border-radius:4;
                                               -fx-padding:4 18 4 18;"/>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </children>
        </StackPane>
    </center>

</BorderPane>
