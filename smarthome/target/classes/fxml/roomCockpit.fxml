<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="at.jku.se.smarthome.controllers.RoomCockpitController"
            style="-fx-background-color:#f2f2f2;">

    <VBox prefWidth="980" prefHeight="640" alignment="TOP_CENTER">
        <padding>
            <Insets top="52" right="32" bottom="24" left="32"/>
        </padding>

        <children>

            <VBox spacing="18" prefWidth="904" maxWidth="904">

                <!-- ROOM CARD -->
                <VBox spacing="12" style="-fx-background-color:#e0e0e0; -fx-background-radius:20;">
                    <padding><Insets top="18" right="28" bottom="18" left="28"/></padding>

                    <children>
                        <VBox spacing="4">
                            <Label text="Raum" style="-fx-font-size:16; -fx-font-weight:bold; -fx-text-fill:#222;"/>
                            <Label text="Verwalten Sie den Raum und die zugewiesenen Geräte."
                                   style="-fx-font-size:11; -fx-text-fill:#555555;"/>
                        </VBox>

                        <GridPane hgap="12" vgap="8">
                            <columnConstraints>
                                <ColumnConstraints minWidth="110"/>
                                <ColumnConstraints hgrow="ALWAYS"/>
                            </columnConstraints>

                            <children>
                                <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                                <Label fx:id="roomNameLabel" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                                <Label text="Größe:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                                <Label fx:id="roomSizeLabel" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                                <Label text="Gebäude:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                                <Label fx:id="roomHouseLabel" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                            </children>
                        </GridPane>

                        <HBox alignment="CENTER_RIGHT" spacing="10">
                            <Button text="Bearbeiten" onAction="#editRoom"/>
                            <Button text="Löschen" onAction="#deleteRoom"/>
                        </HBox>
                    </children>
                </VBox>

                <!-- DEVICES CARD -->
                <VBox spacing="12" VBox.vgrow="ALWAYS"
                      style="-fx-background-color:#e0e0e0; -fx-background-radius:20;">
                    <padding><Insets top="18" right="28" bottom="18" left="28"/></padding>

                    <children>
                        <Label text="Geräte" style="-fx-font-size:16; -fx-font-weight:bold; -fx-text-fill:#222;"/>

                        <!-- Assigned -->
                        <Label text="Geräte im Raum" style="-fx-font-size:12; -fx-font-weight:bold;"/>
                        <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS"
                                    style="-fx-background-color:transparent; -fx-padding:0;">
                            <content>
                                <VBox fx:id="assignedDevicesBox" spacing="10"/>
                            </content>
                        </ScrollPane>

                        <Region prefHeight="8"/>

                        <!-- Available -->
                        <Label text="Verfügbare Geräte" style="-fx-font-size:12; -fx-font-weight:bold;"/>
                        <ScrollPane fitToWidth="true" prefHeight="160"
                                    style="-fx-background-color:transparent; -fx-padding:0;">
                            <content>
                                <VBox fx:id="availableDevicesBox" spacing="10"/>
                            </content>
                        </ScrollPane>

                        <HBox alignment="CENTER_RIGHT">
                            <Button text="+ Gerät" onAction="#openCreateDevice"/>
                        </HBox>
                    </children>
                </VBox>

                <HBox alignment="CENTER_RIGHT">
                    <Button text="Zurück" onAction="#back"/>
                </HBox>

            </VBox>
        </children>
    </VBox>
</AnchorPane>
