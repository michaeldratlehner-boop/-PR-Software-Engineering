<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="at.jku.se.smarthome.controllers.BuildingEditController"
            style="-fx-background-color:#f2f2f2;">

    <!-- Back (oben links) -->
    <Label text="← Zurück zur Startseite"
           layoutX="18" layoutY="14"
           style="-fx-font-size:12; -fx-text-fill:#333333;"/>

    <VBox prefWidth="980" prefHeight="640" alignment="TOP_CENTER">
        <padding>
            <Insets top="52" right="32" bottom="24" left="32"/>
        </padding>

        <children>

            <!-- CARD: Gebäude bearbeiten -->
            <VBox prefWidth="560" spacing="12"
                  style="-fx-background-color:#e0e0e0; -fx-background-radius:20;">
                <padding>
                    <Insets top="24" right="28" bottom="24" left="28"/>
                </padding>

                <children>
                    <VBox spacing="2">
                        <children>
                            <Label fx:id="titleLabel"
                                   text="Gebäude bearbeiten"
                                   style="-fx-font-size:16; -fx-font-weight:bold; -fx-text-fill:#222;"/>
                            <Label text="Bearbeiten Sie Ihr angelegtes Gebäude"
                                   style="-fx-font-size:11; -fx-text-fill:#555555;"/>
                        </children>
                    </VBox>

                    <Region prefHeight="6"/>

                    <!-- Bezeichnung -->
                    <VBox spacing="6">
                        <children>
                            <Label text="Bezeichnung *"
                                   style="-fx-font-size:11; -fx-text-fill:#333333;"/>
                            <TextField fx:id="nameField"
                                       promptText="Meine Wohnung"/>
                        </children>
                    </VBox>

                    <!-- Stockwerke -->
                    <VBox spacing="6">
                        <children>
                            <Label text="Anzahl der Stockwerke *"
                                   style="-fx-font-size:11; -fx-text-fill:#333333;"/>

                            <HBox spacing="10" alignment="CENTER_LEFT">
                                <children>
                                    <Button text="-"
                                            onAction="#decreaseFloors"
                                            style="-fx-background-color:white; -fx-text-fill:#333333; -fx-border-color:#cccccc; -fx-border-radius:6; -fx-background-radius:6; -fx-padding:2 12 2 12;"/>
                                    <TextField fx:id="floorsField"
                                               prefWidth="80"
                                               text="1"/>
                                    <Button text="+"
                                            onAction="#increaseFloors"
                                            style="-fx-background-color:white; -fx-text-fill:#333333; -fx-border-color:#cccccc; -fx-border-radius:6; -fx-background-radius:6; -fx-padding:2 12 2 12;"/>
                                </children>
                            </HBox>
                        </children>
                    </VBox>

                    <!-- Adresse -->
                    <VBox spacing="6">
                        <children>
                            <Label text="Adresse *"
                                   style="-fx-font-size:11; -fx-text-fill:#333333;"/>
                            <TextField fx:id="addressField"
                                       promptText="Musterstraße 1, 1010 Wien"/>
                        </children>
                    </VBox>

                    <Label fx:id="errorLabel"
                           visible="false"
                           managed="false"
                           style="-fx-text-fill:#b00020; -fx-font-size:11;"/>

                    <Region prefHeight="6"/>

                    <!-- Buttons -->
                    <HBox spacing="14" alignment="CENTER">
                        <children>
                            <Button text="Speichern"
                                    onAction="#save"
                                    style="-fx-background-color:#333333; -fx-text-fill:white; -fx-padding:6 22 6 22;"/>
                            <Button text="Abbrechen"
                                    onAction="#cancel"
                                    style="-fx-background-color:white; -fx-text-fill:#333333; -fx-border-color:#cccccc; -fx-border-radius:12; -fx-background-radius:12; -fx-padding:6 22 6 22;"/>
                        </children>
                    </HBox>

                </children>
            </VBox>

            <Region prefHeight="16"/>

            <!-- CARD: Smart Home Informationen -->
            <VBox prefWidth="560" spacing="8"
                  style="-fx-background-color:#e0e0e0; -fx-background-radius:20;">
                <padding>
                    <Insets top="18" right="28" bottom="18" left="28"/>
                </padding>

                <children>
                    <Label text="Smart Home Informationen"
                           style="-fx-font-size:14; -fx-font-weight:bold; -fx-text-fill:#222;"/>

                    <GridPane hgap="40" vgap="10">
                        <columnConstraints>
                            <ColumnConstraints prefWidth="250"/>
                            <ColumnConstraints prefWidth="250"/>
                        </columnConstraints>

                        <children>
                            <VBox GridPane.columnIndex="0" spacing="4">
                                <children>
                                    <Label text="Benutzer-ID:"
                                           style="-fx-font-size:11; -fx-text-fill:#555555;"/>
                                    <Label fx:id="userIdLabel"
                                           text="-"
                                           style="-fx-font-size:11; -fx-text-fill:#222;"/>
                                </children>
                            </VBox>

                            <VBox GridPane.columnIndex="1" spacing="4">
                                <children>
                                    <Label text="Breitengrad:"
                                           style="-fx-font-size:11; -fx-text-fill:#555555;"/>
                                    <Label fx:id="latitudeLabel"
                                           text="-"
                                           style="-fx-font-size:11; -fx-text-fill:#222;"/>
                                </children>
                            </VBox>

                            <VBox GridPane.columnIndex="0" GridPane.rowIndex="1" spacing="4">
                                <children>
                                    <Label text="Längengrad:"
                                           style="-fx-font-size:11; -fx-text-fill:#555555;"/>
                                    <Label fx:id="longitudeLabel"
                                           text="-"
                                           style="-fx-font-size:11; -fx-text-fill:#222;"/>
                                </children>
                            </VBox>
                        </children>
                    </GridPane>

                    <Label wrapText="true"
                           text="Diese Standortdaten können für Smart Home Automatisierungen wie wetterbasierte Steuerungen, Zeitberechnung und lokale Dienste verwendet werden."
                           style="-fx-font-size:11; -fx-text-fill:#555555;"/>
                </children>
            </VBox>

        </children>
    </VBox>

</AnchorPane>
