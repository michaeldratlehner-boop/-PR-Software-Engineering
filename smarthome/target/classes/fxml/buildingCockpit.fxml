<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="at.jku.se.smarthome.controllers.BuildingController"
            style="-fx-background-color:#f2f2f2;"
            prefWidth="820" prefHeight="640">

    <!-- Zurück zur Startseite oben links -->
    <top>
        <HBox alignment="CENTER_LEFT">
            <padding>
                <Insets top="15" right="20" bottom="10" left="25"/>
            </padding>
            <children>
                <Button text="←  Zurück zur Startseite"
                        style="-fx-background-color:transparent; -fx-text-fill:#333333;"
                        onAction="#backToDashboard"/>
            </children>
        </HBox>
    </top>

    <center>
        <StackPane alignment="TOP_CENTER">
            <padding>
                <Insets top="20" right="0" bottom="20" left="0"/>
            </padding>
            <children>

                <!-- ========= LISTE: Gebäude-Cockpit ========= -->
                <VBox fx:id="listCard"
                      alignment="TOP_CENTER"
                      maxWidth="520"
                      style="-fx-background-color:#e0e0e0; -fx-background-radius:20;">
                    <padding>
                        <Insets top="24" right="40" bottom="24" left="40"/>
                    </padding>

                    <children>
                        <!-- Überschrift -->
                        <VBox spacing="2">
                            <children>
                                <Label text="Liste der angelegten"
                                       style="-fx-font-size:16; -fx-font-weight:bold;"/>
                                <Label text="Gebäude"
                                       style="-fx-font-size:16; -fx-font-weight:bold;"/>
                                <Label text="Gebäude für andere Nutzer freigeben oder diese bearbeiten"
                                       wrapText="true"
                                       style="-fx-font-size:11; -fx-text-fill:#555555;"/>
                            </children>
                        </VBox>

                        <!-- Liste der Gebäude (dynamisch) -->
                        <VBox fx:id="buildingsListBox" spacing="10">
                            <!-- Beispiel-Eintrag -->
                            <HBox alignment="CENTER_LEFT" spacing="10"
                                  style="-fx-background-color:white;
                                         -fx-background-radius:20;
                                         -fx-border-radius:20;
                                         -fx-border-color:#cccccc;">
                                <padding>
                                    <Insets top="6" right="10" bottom="6" left="20"/>
                                </padding>
                                <children>
                                    <Label fx:id="exampleBuildingLabel"
                                           text="Meine Wohnung"
                                           style="-fx-font-size:12;"/>
                                    <Region HBox.hgrow="ALWAYS"/>

                                    <Button text="Bearbeiten"
                                            onAction="#editSelectedBuilding"
                                            style="-fx-background-color:#333333;
                                                   -fx-text-fill:white;
                                                   -fx-padding:3 10 3 10;"/>

                                    <Button text="Freigeben"
                                            onAction="#shareSelectedBuilding"
                                            style="-fx-background-color:white;
                                                   -fx-text-fill:#333333;
                                                   -fx-border-color:#333333;
                                                   -fx-border-radius:12;
                                                   -fx-padding:3 10 3 10;"/>

                                    <Button text="Löschen"
                                            onAction="#deleteBuilding"
                                            style="-fx-background-color:#333333;
                                                   -fx-text-fill:white;
                                                   -fx-padding:3 10 3 10;"/>
                                </children>
                            </HBox>
                        </VBox>
                    </children>
                </VBox>

                <!-- ========= FORMULAR: Gebäude erstellen / bearbeiten ========= -->
                <VBox fx:id="formCard"
                      alignment="TOP_CENTER" spacing="20"
                      maxWidth="520"
                      style="-fx-background-color:#e0e0e0; -fx-background-radius:20;">
                    <padding>
                        <Insets top="24" right="40" bottom="24" left="40"/>
                    </padding>

                    <children>

                        <!-- Überschrift -->
                        <VBox spacing="4" alignment="CENTER_LEFT">
                            <children>
                                <Label fx:id="formTitleLabel"
                                       text="Gebäude erstellen"
                                       style="-fx-font-size:18; -fx-font-weight:bold;"/>
                                <Label fx:id="formSubtitleLabel"
                                       text="Fügen Sie Ihr Haus oder Wohnung hinzu"
                                       style="-fx-font-size:11; -fx-text-fill:#666666;"/>
                            </children>
                        </VBox>

                        <!-- Formular -->
                        <VBox spacing="12" maxWidth="Infinity">

                            <!-- Bezeichnung -->
                            <VBox spacing="4">
                                <children>
                                    <Label text="Bezeichnung *"
                                           style="-fx-font-size:11; -fx-text-fill:#333333;"/>
                                    <TextField fx:id="nameField"
                                               promptText="Meine Wohnung"/>
                                </children>
                            </VBox>

                            <!-- Anzahl der Stockwerke -->
                            <VBox spacing="4">
                                <children>
                                    <Label text="Anzahl der Stockwerke *"
                                           style="-fx-font-size:11; -fx-text-fill:#333333;"/>
                                    <HBox spacing="6">
                                        <children>
                                            <Button text="-"
                                                    prefWidth="32"
                                                    onAction="#decreaseFloors"/>
                                            <TextField fx:id="floorsField"
                                                       prefWidth="60"
                                                       alignment="CENTER"
                                                       text="1"/>
                                            <Button text="+"
                                                    prefWidth="32"
                                                    onAction="#increaseFloors"/>
                                        </children>
                                    </HBox>
                                </children>
                            </VBox>

                            <!-- Adresse -->
                            <VBox spacing="4">
                                <children>
                                    <Label text="Adresse *"
                                           style="-fx-font-size:11; -fx-text-fill:#333333;"/>
                                    <TextField fx:id="addressField"
                                               promptText="Hameringstraße 7, 4600 Wels"/>
                                </children>
                            </VBox>

                        </VBox>

                        <!-- Buttons: Speichern / Abbrechen -->
                        <HBox spacing="10" alignment="CENTER_RIGHT">
                            <padding>
                                <Insets top="8" right="0" bottom="0" left="0"/>
                            </padding>
                            <children>
                                <Button text="Speichern"
                                        onAction="#saveBuilding"
                                        style="-fx-background-color:#333333; -fx-text-fill:white; -fx-padding:4 18 4 18;"/>
                                <Button text="Abbrechen"
                                        onAction="#cancel"
                                        style="-fx-background-color:white; -fx-text-fill:#333333;
                                               -fx-border-color:#cccccc; -fx-border-radius:4; -fx-padding:4 18 4 18;"/>
                            </children>
                        </HBox>

                        <!-- Smart Home Informationen -->
                        <VBox alignment="TOP_LEFT" spacing="12"
                              maxWidth="520"
                              style="-fx-background-color:#d8d8d8; -fx-background-radius:20;">
                            <padding>
                                <Insets top="20" right="30" bottom="20" left="30"/>
                            </padding>

                            <children>
                                <Label text="Smart Home Informationen"
                                       style="-fx-font-size:13; -fx-font-weight:bold;"/>

                                <!-- Zeile mit Benutzer-ID / Breitengrad -->
                                <GridPane hgap="40" vgap="4">
                                    <children>
                                        <VBox GridPane.columnIndex="0" spacing="2">
                                            <children>
                                                <Label text="Benutzer-ID:"
                                                       style="-fx-font-size:11; -fx-font-weight:bold;"/>
                                                <Label fx:id="userIdLabel"
                                                       text="0e6422ba-98cc-41bb-9e4d-6b1e3b5ceb79"
                                                       style="-fx-font-size:11;"/>
                                            </children>
                                        </VBox>

                                        <VBox GridPane.columnIndex="1" spacing="2">
                                            <children>
                                                <Label text="Breitengrad:"
                                                       style="-fx-font-size:11; -fx-font-weight:bold;"/>
                                                <Label fx:id="latitudeLabel"
                                                       text="48.158931"
                                                       style="-fx-font-size:11;"/>
                                            </children>
                                        </VBox>
                                    </children>
                                </GridPane>

                                <!-- Längengrad -->
                                <VBox spacing="2">
                                    <children>
                                        <Label text="Längengrad:"
                                               style="-fx-font-size:11; -fx-font-weight:bold;"/>
                                        <Label fx:id="longitudeLabel"
                                               text="14.018111"
                                               style="-fx-font-size:11;"/>
                                    </children>
                                </VBox>

                                <!-- Erklärungstext -->
                                <Label wrapText="true"
                                       text="Diese Standortdaten können für Smart Home Automatisierungen wie wetterbasierte Steuerungen, Zeitzonenberechnung und lokale Dienste verwendet werden."
                                       style="-fx-font-size:10; -fx-text-fill:#555555;"/>

                            </children>
                        </VBox>

                    </children>
                </VBox> <!-- ========= POPUP: Gebäude löschen bestätigen ========= -->
                <VBox fx:id="deletePopup"
                      alignment="CENTER"
                      visible="false" managed="false"
                      style="-fx-background-color: rgba(0,0,0,0.25);">
                    <children>
                        <VBox spacing="15" alignment="CENTER"
                              style="-fx-background-color:#e0e0e0; -fx-background-radius:20;"
                              maxWidth="420" maxHeight="240">
                            <padding>
                                <Insets top="30" right="40" bottom="30" left="40"/>
                            </padding>
                            <children>
                                <Label text="Wollen Sie das Gebäude"
                                       style="-fx-font-size:18;"/>
                                <Label text="wirklich löschen?"
                                       style="-fx-font-size:18;"/>

                                <!-- optional: Name des Gebäudes -->
                                <Label fx:id="deleteBuildingNameLabel"
                                       text=""
                                       style="-fx-font-size:12; -fx-text-fill:#555555;"/>

                                <HBox spacing="12" alignment="CENTER">
                                    <Button text="JA"
                                            onAction="#confirmDeleteBuilding"
                                            style="-fx-background-color:#333333; -fx-text-fill:white;
                                               -fx-padding:4 18 4 18;"/>
                                    <Button text="NEIN"
                                            onAction="#cancelDeleteBuilding"
                                            style="-fx-background-color:white; -fx-text-fill:#333333;
                                               -fx-border-color:#cccccc; -fx-border-radius:4;
                                               -fx-padding:4 18 4 18;"/>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </children>
        </StackPane>
    </center>

</BorderPane>
