<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="at.jku.se.smarthome.controllers.DeviceController"
            style="-fx-background-color:#f2f2f2;"
            prefWidth="820" prefHeight="640">

    <!-- Zurück zur Startseite oben links -->
    <top>
        <HBox alignment="CENTER_LEFT">
            <padding>
                <Insets top="15" right="20" bottom="10" left="25"/>
            </padding>
            <children>
                <Button text="←  Zurück zur Startseite"
                        style="-fx-background-color:transparent; -fx-text-fill:#333333;"
                        onAction="#backToDashboard"/>
            </children>
        </HBox>
    </top>

    <center>
        <StackPane alignment="TOP_CENTER">
            <padding>
                <Insets top="20" right="0" bottom="20" left="0"/>
            </padding>
            <children>

                <!-- ========== LISTE: Geräte/Sensoren ========= -->
                <VBox fx:id="listCard"
                      alignment="TOP_CENTER"
                      maxWidth="520"
                      style="-fx-background-color:#e0e0e0; -fx-background-radius:20;">
                    <padding>
                        <Insets top="24" right="40" bottom="24" left="40"/>
                    </padding>

                    <children>
                        <!-- Überschrift -->
                        <VBox spacing="2">
                            <children>
                                <Label text="Liste der angelegten"
                                       style="-fx-font-size:16; -fx-font-weight:bold;"/>
                                <Label text="Geräte/Sensoren"
                                       style="-fx-font-size:16; -fx-font-weight:bold;"/>
                                <Label text="Verwalten Sie Ihre Geräte und Sensoren"
                                       wrapText="true"
                                       style="-fx-font-size:11; -fx-text-fill:#555555;"/>
                            </children>
                        </VBox>

                        <!-- Liste der Geräte (dynamisch) -->
                        <VBox fx:id="devicesListBox" spacing="10">
                            <!-- Beispiel-Eintrag -->
                            <HBox alignment="CENTER_LEFT" spacing="10"
                                  style="-fx-background-color:white;
                                         -fx-background-radius:20;
                                         -fx-border-radius:20;
                                         -fx-border-color:#cccccc;">
                                <padding>
                                    <Insets top="6" right="10" bottom="6" left="20"/>
                                </padding>
                                <children>
                                    <Label fx:id="exampleDeviceLabel"
                                           text="TemperaturSensor_01"
                                           style="-fx-font-size:12;"/>
                                    <Region HBox.hgrow="ALWAYS"/>

                                    <Button text="Bearbeiten"
                                            onAction="#editSelectedDevice"
                                            style="-fx-background-color:#333333;
                                                   -fx-text-fill:white;
                                                   -fx-padding:3 10 3 10;"/>

                                    <Button text="Löschen"
                                            onAction="#deleteDevice"
                                            style="-fx-background-color:#333333;
                                                   -fx-text-fill:white;
                                                   -fx-padding:3 10 3 10;"/>
                                </children>
                            </HBox>
                        </VBox>
                    </children>
                </VBox>

                <!-- ========== FORMULAR: Gerät/Sensor hinzufügen / bearbeiten ========= -->
                <VBox fx:id="formCard"
                      alignment="TOP_CENTER" spacing="20"
                      maxWidth="520"
                      style="-fx-background-color:#e0e0e0; -fx-background-radius:20;">
                    <padding>
                        <Insets top="24" right="40" bottom="32" left="40"/>
                    </padding>

                    <children>

                        <!-- Überschrift -->
                        <VBox spacing="4" alignment="CENTER_LEFT">
                            <children>
                                <Label fx:id="formTitleLabel"
                                       text="Gerät/Sensor hinzufügen"
                                       style="-fx-font-size:18; -fx-font-weight:bold;"/>
                                <Label fx:id="formSubtitleLabel"
                                       text="Fügen Sie Ihrem Haus oder Ihrer Wohnung ein Gerät/Sensor hinzu"
                                       style="-fx-font-size:11; -fx-text-fill:#666666;"/>
                            </children>
                        </VBox>

                        <!-- Formular -->
                        <VBox spacing="12" maxWidth="Infinity">

                            <!-- Name -->
                            <VBox spacing="4">
                                <children>
                                    <Label text="Name*" style="-fx-font-size:11; -fx-text-fill:#333333;"/>
                                    <TextField fx:id="deviceNameField"
                                               promptText="TemperaturSensor_01"/>
                                </children>
                            </VBox>

                            <!-- Typ -->
                            <VBox spacing="4">
                                <children>
                                    <Label text="Typ*" style="-fx-font-size:11; -fx-text-fill:#333333;"/>
                                    <TextField fx:id="deviceTypeField"
                                               promptText="Temperatursensor"/>
                                </children>
                            </VBox>

                            <!-- Gerät/Sensor Auswahl -->
                            <VBox spacing="4">
                                <children>
                                    <Label text="Gerät/Sensor*" style="-fx-font-size:11; -fx-text-fill:#333333;"/>
                                    <ComboBox fx:id="deviceKindCombo"
                                              promptText="Gerät/Sensor auswählen"/>
                                </children>
                            </VBox>

                            <!-- WLAN-Passwort -->
                            <VBox spacing="4">
                                <children>
                                    <Label text="WLAN-Passwort*" style="-fx-font-size:11; -fx-text-fill:#333333;"/>
                                    <PasswordField fx:id="wifiPasswordField"
                                                   promptText="************"/>
                                </children>
                            </VBox>

                        </VBox>

                        <!-- Buttons -->
                        <HBox spacing="10" alignment="CENTER">
                            <padding>
                                <Insets top="18" right="0" bottom="0" left="0"/>
                            </padding>
                            <children>
                                <Button text="Speichern"
                                        onAction="#saveDevice"
                                        style="-fx-background-color:#333333; -fx-text-fill:white; -fx-padding:4 20 4 20;"/>
                                <Button text="Abbrechen"
                                        onAction="#cancel"
                                        style="-fx-background-color:white; -fx-text-fill:#333333;
                                               -fx-border-color:#cccccc; -fx-border-radius:4;
                                               -fx-padding:4 20 4 20;"/>
                            </children>
                        </HBox>

                    </children>
                </VBox>

                <!-- ========== POPUP: Gerät löschen bestätigen ========= -->
                <VBox fx:id="deletePopup"
                      alignment="CENTER"
                      visible="false" managed="false"
                      style="-fx-background-color: rgba(0,0,0,0.25);">
                    <children>
                        <VBox spacing="15" alignment="CENTER"
                              style="-fx-background-color:#e0e0e0; -fx-background-radius:20;"
                              maxWidth="420" maxHeight="240">
                            <padding>
                                <Insets top="30" right="40" bottom="30" left="40"/>
                            </padding>
                            <children>
                                <Label text="Wollen Sie das Gerät"
                                       style="-fx-font-size:18;"/>
                                <Label text="wirklich löschen?"
                                       style="-fx-font-size:18;"/>

                                <Label fx:id="deleteDeviceNameLabel"
                                       text=""
                                       style="-fx-font-size:12; -fx-text-fill:#555555;"/>

                                <HBox spacing="12" alignment="CENTER">
                                    <Button text="JA"
                                            onAction="#confirmDeleteDevice"
                                            style="-fx-background-color:#333333; -fx-text-fill:white;
                                                   -fx-padding:4 18 4 18;"/>
                                    <Button text="NEIN"
                                            onAction="#cancelDeleteDevice"
                                            style="-fx-background-color:white; -fx-text-fill:#333333;
                                                   -fx-border-color:#cccccc; -fx-border-radius:4;
                                                   -fx-padding:4 18 4 18;"/>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                </VBox>

            </children>
        </StackPane>
    </center>

</BorderPane>
