<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="at.jku.se.smarthome.controllers.DeviceController"
            prefWidth="900" prefHeight="650"
            style="-fx-background-color: white;">

    <!-- Back-Link wie im Screenshot -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <padding>
                <Insets top="14" right="18" bottom="10" left="18"/>
            </padding>

            <children>
                <Hyperlink text="← Zurück zur Startseite"
                           onAction="#backToDashboard"
                           style="-fx-text-fill:#222222; -fx-font-size:12; -fx-underline:false;"/>
            </children>
        </HBox>
    </top>

    <center>
        <StackPane alignment="CENTER">
            <padding>
                <Insets top="10" right="0" bottom="10" left="0"/>
            </padding>

            <children>

                <!-- LIST CARD (optional, falls du weiterhin Liste + Form willst) -->
                <VBox fx:id="listCard"
                      visible="true" managed="true"
                      alignment="TOP_CENTER"
                      maxWidth="780"
                      style="-fx-background-color:#e0e0e0; -fx-background-radius:22;">
                    <padding>
                        <Insets top="18" right="22" bottom="18" left="22"/>
                    </padding>

                    <children>

                        <HBox alignment="CENTER_LEFT">
                            <children>
                                <Label text="Geräte/Sensoren"
                                       style="-fx-font-size:16; -fx-font-weight:bold; -fx-text-fill:#222222;"/>
                                <Region HBox.hgrow="ALWAYS"/>
                                <Button text="+ Gerät"
                                        onAction="#createDevice"
                                        style="-fx-background-color: transparent;
                                               -fx-border-color:#2b9cff;
                                               -fx-text-fill:#2b9cff;
                                               -fx-border-radius:4;
                                               -fx-background-radius:4;
                                               -fx-padding:4 12 4 12;"/>
                            </children>
                        </HBox>

                        <Label text="Verwalten Sie Ihre Geräte und Sensoren"
                               style="-fx-text-fill:#666666; -fx-font-size:11;"/>

                        <VBox fx:id="devicesListBox" spacing="10">
                            <HBox alignment="CENTER_LEFT" spacing="12"
                                  style="-fx-background-color:white;
                                         -fx-background-radius:16;
                                         -fx-border-radius:16;
                                         -fx-border-color:#cccccc;">
                                <padding>
                                    <Insets top="10" right="14" bottom="10" left="16"/>
                                </padding>

                                <children>
                                    <VBox spacing="2" alignment="CENTER_LEFT">
                                        <children>
                                            <Label fx:id="exampleDeviceLabel"
                                                   text="TemperaturSensor_01"
                                                   style="-fx-font-size:13; -fx-font-weight:bold; -fx-text-fill:#222222;"/>
                                            <Label text="Sensor"
                                                   style="-fx-font-size:11; -fx-text-fill:#666666;"/>
                                        </children>
                                    </VBox>

                                    <Region HBox.hgrow="ALWAYS"/>

                                    <Button text="Bearbeiten"
                                            onAction="#editSelectedDevice"
                                            style="-fx-background-color:#efefef;
                                                   -fx-text-fill:#222222;
                                                   -fx-border-color:#cfcfcf;
                                                   -fx-border-radius:4;
                                                   -fx-background-radius:4;
                                                   -fx-padding:4 12 4 12;"/>

                                    <Button text="Löschen"
                                            onAction="#deleteDevice"
                                            style="-fx-background-color:#efefef;
                                                   -fx-text-fill:#222222;
                                                   -fx-border-color:#cfcfcf;
                                                   -fx-border-radius:4;
                                                   -fx-background-radius:4;
                                                   -fx-padding:4 12 4 12;"/>

                                    <Button text="Öffnen"
                                            onAction="#openDevice"
                                            style="-fx-background-color:#efefef;
                                                   -fx-text-fill:#222222;
                                                   -fx-border-color:#cfcfcf;
                                                   -fx-border-radius:4;
                                                   -fx-background-radius:4;
                                                   -fx-padding:4 12 4 12;"/>
                                </children>
                            </HBox>
                        </VBox>

                    </children>
                </VBox>

                <!-- FORM CARD (Design wie dein Screenshot “Raum hinzufügen”) -->
                <VBox fx:id="formCard"
                      visible="false" managed="false"
                      alignment="TOP_LEFT"
                      maxWidth="560"
                      style="-fx-background-color:#e0e0e0; -fx-background-radius:22;">
                    <padding>
                        <Insets top="22" right="26" bottom="22" left="26"/>
                    </padding>

                    <children>

                        <Label fx:id="formTitleLabel"
                               text="Gerät/Sensor hinzufügen"
                               style="-fx-font-size:18; -fx-font-weight:bold; -fx-text-fill:#222222;"/>

                        <Label fx:id="formSubtitleLabel"
                               text="Fügen Sie Ihrem Haus oder Wohnung ein Gerät/Sensor hinzu"
                               style="-fx-text-fill:#666666; -fx-font-size:11;"/>

                        <Region prefHeight="14"/>

                        <!-- Formular-Layout wie bei Räume (Labels links, Fields darunter) -->
                        <VBox spacing="10">

                            <VBox spacing="4">
                                <Label text="Name*"
                                       style="-fx-text-fill:#222222; -fx-font-size:11;"/>
                                <TextField fx:id="deviceNameField"
                                           promptText="z.B. Wohnzimmer-Licht"
                                           style="-fx-background-color:white; -fx-background-radius:3; -fx-border-radius:3;"/>
                            </VBox>

                            <VBox spacing="4">
                                <Label text="Gerätetyp"
                                       style="-fx-text-fill:#222222; -fx-font-size:11;"/>
                                <TextField fx:id="deviceTypeField"
                                           promptText="optional"
                                           style="-fx-background-color:white; -fx-background-radius:3; -fx-border-radius:3;"/>
                            </VBox>

                            <VBox spacing="4">
                                <Label text="Geräteart"
                                       style="-fx-text-fill:#222222; -fx-font-size:11;"/>
                                <ComboBox fx:id="deviceKindCombo"
                                          promptText="Bitte auswählen"
                                          style="-fx-background-color:white; -fx-background-radius:3; -fx-border-radius:3;"/>
                            </VBox>

                            <VBox spacing="4">
                                <Label text="WLAN Passwort"
                                       style="-fx-text-fill:#222222; -fx-font-size:11;"/>
                                <PasswordField fx:id="wifiPasswordField"
                                               promptText="optional"
                                               style="-fx-background-color:white; -fx-background-radius:3; -fx-border-radius:3;"/>
                            </VBox>

                        </VBox>

                        <Region prefHeight="18"/>

                        <!-- Buttons wie im Screenshot (zentriert, dunkel + hell) -->
                        <HBox alignment="CENTER" spacing="14">
                            <children>
                                <Button text="Speichern"
                                        onAction="#saveDevice"
                                        style="-fx-background-color:#2b2b2b;
                                               -fx-text-fill:white;
                                               -fx-border-radius:4;
                                               -fx-background-radius:4;
                                               -fx-padding:6 22 6 22;"/>

                                <Button text="Abbrechen"
                                        onAction="#cancel"
                                        style="-fx-background-color:white;
                                               -fx-text-fill:#222222;
                                               -fx-border-color:#cfcfcf;
                                               -fx-border-radius:4;
                                               -fx-background-radius:4;
                                               -fx-padding:6 22 6 22;"/>
                            </children>
                        </HBox>

                    </children>
                </VBox>

                <!-- DELETE POPUP (optional) -->
                <VBox fx:id="deletePopup"
                      visible="false" managed="false"
                      maxWidth="420"
                      style="-fx-background-color:white;
                             -fx-background-radius:16;
                             -fx-border-radius:16;
                             -fx-border-color:#cccccc;">
                    <padding>
                        <Insets top="16" right="16" bottom="16" left="16"/>
                    </padding>

                    <children>
                        <Label text="Gerät löschen?"
                               style="-fx-font-size:16; -fx-font-weight:bold; -fx-text-fill:#222222;"/>

                        <Label fx:id="deleteDeviceNameLabel"
                               text="(Gerät)"
                               style="-fx-text-fill:#666666;"/>

                        <Separator/>

                        <HBox alignment="CENTER_RIGHT" spacing="10">
                            <Button text="Abbrechen"
                                    onAction="#cancelDeleteDevice"
                                    style="-fx-background-color:#efefef;
                                           -fx-text-fill:#222222;
                                           -fx-border-color:#cfcfcf;
                                           -fx-border-radius:4;
                                           -fx-background-radius:4;
                                           -fx-padding:6 18 6 18;"/>

                            <Button text="Löschen"
                                    onAction="#confirmDeleteDevice"
                                    style="-fx-background-color:#ff4d4d;
                                           -fx-text-fill:white;
                                           -fx-border-radius:4;
                                           -fx-background-radius:4;
                                           -fx-padding:6 18 6 18;"/>
                        </HBox>
                    </children>
                </VBox>

            </children>
        </StackPane>
    </center>

</BorderPane>
