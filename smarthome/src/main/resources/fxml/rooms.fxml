<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="at.jku.se.smarthome.controllers.RoomCockpitController"
            style="-fx-background-color:#f2f2f2;">

    <VBox prefWidth="980" prefHeight="640" alignment="TOP_CENTER">
        <padding>
            <Insets top="52" right="32" bottom="24" left="32"/>
        </padding>

        <children>
            <VBox spacing="18" prefWidth="904" maxWidth="904">

                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label text="Räume"
                           style="-fx-font-size:18; -fx-font-weight:bold; -fx-text-fill:#222;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button text="+ Raum" onAction="#createRoom"/>
                </HBox>

                <VBox spacing="12" VBox.vgrow="ALWAYS"
                      style="-fx-background-color:#e0e0e0; -fx-background-radius:20;">
                    <padding><Insets top="18" right="28" bottom="18" left="28"/></padding>

                    <children>
                        <Label fx:id="emptyLabel"
                               text="Keine Räume vorhanden."
                               visible="false" managed="false"
                               style="-fx-text-fill:#666; -fx-font-size:12;"/>

                        <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS"
                                    style="-fx-background-color:transparent; -fx-padding:0;">
                            <content>
                                <VBox fx:id="roomsBox" spacing="10"/>
                            </content>
                        </ScrollPane>
                    </children>
                </VBox>

                <HBox alignment="CENTER_RIGHT">
                    <Button text="Zurück" onAction="#backToDashboard"/>
                </HBox>

            </VBox>
        </children>
    </VBox>
</AnchorPane>
